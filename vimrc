
" use vim setting over vi settings
set nocompatible

filetype on
syntax on

set shell=bash

set showmode
set nowrap
set tabstop=2
set softtabstop=2
set expandtab
set shiftwidth=2
set shiftround
set backspace=indent,eol,start
set autoindent
set copyindent
set number
set showmatch
set ignorecase
set smartcase
set smarttab
set scrolloff=4
set virtualedit=all
set hlsearch
set incsearch
set fileformats="unix"
set shortmess+=I
set autoread
set history=10000
set undolevels=10000
set directory=~/.vim/.tmp,~/tmp,/tmp
set wildmenu

set visualbell
set noerrorbells
set cursorline
